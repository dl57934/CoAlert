<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:fontFamily="@font/rix_head_b"
        android:gravity="center"
        android:text="자세한 리뷰"
        android:textColor="@color/text"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" />

    <EditText
        android:id="@+id/review_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.1"
        android:fontFamily="@font/rix_head_b"
        android:hint="제목"
        android:textColorHint="@color/text"
        android:textCursorDrawable="@color/text"
        android:theme="@style/EditTextStyle.tTextStyle" />

    <EditText
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.4"
        android:background="@drawable/search_view_edge"
        android:fontFamily="@font/rix_head_b"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:minLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="@color/text"
        android:theme="@style/EditTextStyle.tTextStyle" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:background="@drawable/add_picture_button_background"
            android:backgroundTint="@drawable/search_view_edge" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:background="@drawable/add_picture_button_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:background="@drawable/add_picture_button_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:background="@drawable/add_picture_button_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.04" />
    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:fontFamily="@font/rix_head_b"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:background="@color/button"/>
</LinearLayout>