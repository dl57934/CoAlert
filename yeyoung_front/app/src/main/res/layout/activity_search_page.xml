<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:background="@color/mainColor"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="검색"
        android:textColor="@color/text"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" />

    <Button
        android:id="@+id/activate_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0.25"
        android:background="@drawable/camera_button_background" />

    <TextView
        android:id="@+id/activate_camera_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="제품명을 찍어주세요."
        android:textColor="@color/text"
        android:textSize="19sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/search_view_edge"
        android:queryHint="검색어를 입력해주세요.">

    </SearchView>

</LinearLayout>